<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <description><![CDATA[Jasmine Demo]]></description>
    <display-name>Jasmine Demo</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>


    <filter>
        <filter-name>exception</filter-name>
        <filter-class>com.gridnine.jasmine.server.core.rest.ExceptionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>exception</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>nocache</filter-name>
        <filter-class>com.gridnine.jasmine.server.core.rest.NoCacheFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>nocache</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>auth</filter-name>
        <filter-class>com.gridnine.jasmine.server.demo.rest.DemoAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>auth</filter-name>
        <url-pattern>/ui-rest/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ui-rest-servlet</servlet-name>
        <servlet-class>com.gridnine.jasmine.server.core.rest.RestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ui-rest-servlet</servlet-name>
        <url-pattern>/ui-rest/*</url-pattern>
    </servlet-mapping>

</web-app>
