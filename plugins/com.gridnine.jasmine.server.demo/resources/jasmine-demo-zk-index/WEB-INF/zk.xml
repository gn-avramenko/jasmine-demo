<zk xmlns="http://www.zkoss.org/2005/zk/config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.zkoss.org/2005/zk/config http://www.zkoss.org/2005/zk/config/zk.xsd">
    <richlet>
        <richlet-name>Jasmine</richlet-name>
        <richlet-class>com.gridnine.jasmine.web.server.zk.richlet.JasmineRichlet</richlet-class>
    </richlet>
    <richlet-mapping>
        <richlet-name>Jasmine</richlet-name>
        <url-pattern>/*</url-pattern>
    </richlet-mapping>
    <library-property>
        <name>org.zkoss.theme.preferred</name>
        <value>silvertail</value> <!-- or silvertail, atlantic, deepsea, gardensalad etc. -->
    </library-property>
    <language-config>
        <addon-uri>/WEB-INF/zk-adapter-addon.xml</addon-uri>
    </language-config>
</zk>